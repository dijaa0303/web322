<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit <%= project.title %></title>
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <main class="container">
    <h1>Edit Project</h1>

    <% if (message) { %>
      <p style="color: red;"><%= message %></p>
    <% } %>

    <form action="/solutions/editProject" method="POST">
      <input type="hidden" name="id" value="<%= project.id %>">

      <p>
        <label>Title:</label><br>
        <input type="text" name="title" value="<%= project.title %>" required>
      </p>

      <p>
        <label>Feature Image URL:</label><br>
        <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required>
      </p>

      <p>
        <label>Sector:</label><br>
        <select name="sector_id" required>
          <option value="1" <%= project.sector_id == 1 ? "selected" : "" %>>Land Sinks</option>
          <option value="2" <%= project.sector_id == 2 ? "selected" : "" %>>Industry</option>
          <option value="3" <%= project.sector_id == 3 ? "selected" : "" %>>Transportation</option>
          <option value="4" <%= project.sector_id == 4 ? "selected" : "" %>>Electricity</option>
          <option value="5" <%= project.sector_id == 5 ? "selected" : "" %>>Food, Agriculture, and Land Use</option>
        </select>
      </p>

      <p>
        <label>Short Intro:</label><br>
        <textarea name="intro_short" rows="3" required><%= project.intro_short %></textarea>
      </p>

      <p>
        <label>Short Summary:</label><br>
        <textarea name="summary_short" rows="4" required><%= project.summary_short %></textarea>
      </p>

      <p>
        <label>Impact:</label><br>
        <textarea name="impact" rows="4" required><%= project.impact %></textarea>
      </p>

      <p>
        <label>Original Source URL:</label><br>
        <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required>
      </p>

      <p>
        <button type="submit">Save Changes</button>
      </p>
    </form>
    <% if (session.user) { %>
      <p>
        <a href="/solutions/deleteProject/<%= project.id %>">Delete Project</a>
      </p>
    <% } %>
    
    <p><a href="/solutions/projects">Back to Projects</a></p>
    </main>
  </body>
</html>
